@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>; // gives access to neccessary list of items

<h1>Items</h1>

<ul>
  @foreach(Item item in Model)
  {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name</li> //property names of the object we pass in {id = item.ItemId} MUST match parameter names used by the target method (Details())
  }
</ul>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 
<br>
<p>@Html.ActionLink("Add new item", "Create")</p>

@*Omit third parameter because we are routing to Items controller*@
@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Category>; // gives access to neccessary list of items

<h2>Categories</h2>

<ul>
  @foreach(Category category in Model)
  {
    <p>@Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })</p> //property names of the object we pass in {id = item.ItemId} MUST match parameter names used by the target method (Details())
  }
</ul>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 
<br>
<p>@Html.ActionLink("Add new category", "Create")</p>
